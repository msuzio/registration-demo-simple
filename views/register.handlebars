<div class="banner bg-primary"><h2>Registration</h2></div>

<form>
    <div class="bordered padded">
    <div class=".container-fluid">
      <!-- first name -->
      <div class="row">
          <div class="col-sm-2">
            <span class="pull-left"><label for="firstName">First Name: </label></span>
          </div>
          <div class="col-sm-2">
              <span class="pull-left"><input type="text" name="firstName" id = "firstName" autocomplete="on"/></span>
          </div>
        </div>

      <!-- last name -->
      <div class="row">
          <div class="col-sm-2">
            <span class="pull-left"><label for="lastName">Last Name: </label></span>
          </div>
          <div class="col-sm-2">
              <span class="pull-left"><input type="text" name="lastName" id = "lastName" autocomplete="on"/></span>
          </div>
        </div>

      <!-- address -->
      <div class="row">
        <div class="col-sm-2">
          <span class="pull-left"><label for="address">Address: </label></span>
        </div>
        <div class="col-sm-2">
            <span class="pull-left"><input type="text" name="address" id = "address" autocomplete="on"/></span>
        </div>
      </div>

      <div class="row">
        <div class="col-sm-2">
          <span class="pull-left"><label for="address2">Address 2: </label></span>
        </div>
        <div class="col-sm-2">
            <span class="pull-left"><input type="text" name="address2" id = "address2" autocomplete="on"/></span>
        </div>
      </div>

      <div class="row">
        <div class="col-sm-4">
            <label for="city">City: </label>
            <input type="text" name="city" id="city" autocomplete="on" required/>
        </div>
        <div class="col-sm-4">
            <label for="zipcode">Zipcode: </label>
            <input type="text" name="zipCode" id="zipCode" size="9" autocomplete="on"/>
        </div>
        <div class="col-sm-2">
            <span class="pull-left"><label for="state">State: </label>        
            <select name="state" id="state" autocomplete="on">
              {{#each states}}
              <option value="{{this}}">{{this}}</option>
              {{/each}}
          </select>
          </span>
        </div>
        <div class="col-sm-2">
          <label for="country">Country: </label>
          <select name="country" id="country">
            <option value="US" selected>US</option>
          </select>
        </div>
      </div>
      <div class="row top-buffer submit-area">
        <div class="col-sm-12">
            <input class="btn btn-primary" type="submit" name="submit" id="submit" value="Register"/>
        </div>
      </div>
    </div>
    </div>
</form>